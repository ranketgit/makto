---
import Layout from '../layouts/Layout.astro';
import PageHero from '../components/PageHero.astro';

const pageTitle = "Contactez-nous";

const regionalContacts = [
  { 
    country: "Sénégal - Maroc - Bénin", 
    role: "Siège & Filiales",
    name: "Francesco MARTINO", 
    email: "francesco.martino@maktodistribution.com"
  },
  { 
    country: "Guinée Conakry", 
    role: "Filiale",
    name: "Ousseynou MBENGUE", 
    email: "ousseynou.mbengue@maktodistribution.com"
  },
  { 
    country: "Gambie", 
    role: "Filiale",
    name: "Gloria KANSIIME", 
    email: "gloria.kansiime@maktodistribution.com"
  },
];
---

<Layout 
    title="Contactez-nous" 
    description="Besoin d'un devis ou d'une information technique ? Contactez notre siège à Dakar ou nos filiales en Guinée et Gambie."
> 
    <PageHero 
        title="Contactez-nous" 
        subtitle="Notre équipe est à votre écoute pour répondre à toutes vos questions et vous accompagner dans vos projets."
        bgImage="/contact/hero-contact.jpg"
    />

    <section class="py-24 bg-white relative">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
                
                <div class="bg-white p-8 md:p-10 rounded-2xl shadow-xl border border-gray-100">
                    <h2 class="text-3xl font-bold text-[var(--color-secondary)] mb-2">Envoyez-nous un message</h2>
                    <p class="text-gray-500 mb-8">Remplissez le formulaire ci-dessous et nous vous répondrons dans les plus brefs délais.</p>
                    
                    <form action="https://formsubmit.co/makto@maktodistribution.com" method="POST" class="space-y-6">
                        <input type="hidden" name="_subject" value="Nouveau message depuis le site web Makto">
                        <input type="hidden" name="_template" value="table">
                        <input type="hidden" name="_captcha" value="false">

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label for="nom" class="block text-sm font-medium text-gray-700 mb-2">Nom complet</label>
                                <input type="text" id="nom" name="nom" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-[var(--color-primary)] focus:ring-1 focus:ring-[var(--color-primary)] outline-none transition" placeholder="Votre nom" required>
                            </div>
                            <div>
                                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                                <input type="email" id="email" name="email" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-[var(--color-primary)] focus:ring-1 focus:ring-[var(--color-primary)] outline-none transition" placeholder="votre@email.com" required>
                            </div>
                        </div>
                        
                        <div>
                            <label for="sujet" class="block text-sm font-medium text-gray-700 mb-2">Sujet</label>
                            <select id="sujet" name="sujet" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-[var(--color-primary)] focus:ring-1 focus:ring-[var(--color-primary)] outline-none transition">
                                <option>Demande de devis</option>
                                <option>Renseignement technique</option>
                                <option>Partenariat / Fournisseurs</option>
                                <option>Candidature / RH</option>
                                <option>Autre</option>
                            </select>
                        </div>

                        <div>
                            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message</label>
                            <textarea id="message" name="message" rows="5" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-[var(--color-primary)] focus:ring-1 focus:ring-[var(--color-primary)] outline-none transition" placeholder="Comment pouvons-nous vous aider ?" required></textarea>
                        </div>

                        <button type="submit" class="w-full bg-[var(--color-primary)] text-white font-bold py-4 rounded-lg hover:bg-opacity-90 transition shadow-lg transform hover:-translate-y-1">
                            Envoyer le message
                        </button>
                    </form>
                </div>

                <div class="flex flex-col h-full">
                    <div class="mb-10">
                        <h2 class="text-3xl font-bold text-[var(--color-secondary)] mb-6">Informations du Siège</h2>
                        <div class="space-y-6">
                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 bg-[var(--color-primary)]/10 rounded-full flex items-center justify-center text-[var(--color-primary)] shrink-0">
                                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                                </div>
                                <div>
                                    <h4 class="font-bold text-gray-900">Adresse</h4>
                                    <p class="text-gray-600">Ouakam, corniche Lot N° 1 TF 13821<br/>Residence Baye Tall, Dakar, Sénégal</p>
                                </div>
                            </div>

                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 bg-[var(--color-primary)]/10 rounded-full flex items-center justify-center text-[var(--color-primary)] shrink-0">
                                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
                                </div>
                                <div>
                                    <h4 class="font-bold text-gray-900">Téléphone</h4>
                                    <p class="text-gray-600">+221 33 834 11 38</p>
                                    <p class="text-gray-500 text-sm">Lun - Ven, 8h00 - 18h00</p>
                                </div>
                            </div>

                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 bg-[var(--color-primary)]/10 rounded-full flex items-center justify-center text-[var(--color-primary)] shrink-0">
                                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                                </div>
                                <div>
                                    <h4 class="font-bold text-gray-900">Email</h4>
                                    <a href="mailto:makto@maktodistribution.com" class="text-[var(--color-primary)] hover:underline">makto@maktodistribution.com</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="flex-grow w-full bg-gray-200 rounded-2xl overflow-hidden relative shadow-inner min-h-[300px]">
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3859.0837654763!2d-17.495!3d14.715!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTTCsDQyJzU0LjAiTiAxN8KwMjknNDIuMCJX!5e0!3m2!1sen!2ssn!4v1600000000000!5m2!1sen!2ssn" 
                            width="100%" 
                            height="100%" 
                            style="border:0;" 
                            allowfullscreen="" 
                            loading="lazy"
                            class="absolute inset-0 grayscale hover:grayscale-0 transition duration-700"
                        ></iframe>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <section class="py-24 bg-[var(--color-bg-light)]">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl font-bold text-[var(--color-secondary)] mb-4">Nos Contacts Régionaux</h2>
                <div class="h-1 w-20 bg-[var(--color-primary)] mx-auto"></div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {regionalContacts.map((contact) => (
                    <div class="bg-white p-8 rounded-xl shadow-lg border-t-4 border-[var(--color-secondary)] group hover:-translate-y-2 transition duration-300">
                        <h3 class="text-xl font-bold text-[var(--color-secondary)] mb-1">{contact.country}</h3>
                        <p class="text-xs text-gray-400 mb-6 font-bold uppercase tracking-wide">{contact.role}</p>
                        
                        <div class="flex items-center gap-4">
                             <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center text-gray-600 font-bold group-hover:bg-[var(--color-primary)] group-hover:text-white transition">
                                {contact.name.charAt(0)}
                            </div>
                            <div>
                                <p class="font-bold text-gray-900">{contact.name}</p>
                                <a href={`mailto:${contact.email}`} class="text-[var(--color-primary)] text-sm hover:underline break-all block mt-1">
                                    Email Contact
                                </a>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>
</Layout>
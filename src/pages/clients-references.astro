---
import Layout from '../layouts/Layout.astro';
import PageHero from '../components/PageHero.astro';
import Footer from '../components/Footer.astro';
import EngagementBlock from '../components/EngagementBlock.astro';

const pageTitle = "Nos Références";

const officialBrands = [
  { name: "Daikin", desc: "Référence mondiale en climatisation", img: "/homepage/logos/1.png" },
  { name: "DAB Pumps", desc: "Solutions de pompage innovantes", img: "/homepage/logos/logo-dab.png" },
  { name: "Vitra", desc: "Produits sanitaires de qualité supérieure", img: "/homepage/logos/logo-vitra.png" },
  { name: "LEDL", desc: "Moteurs économes pour l'industrie", img: "/homepage/logos/logo-ledl.png" },
  { name: "Armacell", desc: "Leader mondial des matériaux isolants", img: "/homepage/logos/logo-armacell.png" }
];

const distinctions = [
  {
    title: "Projets d'Excellence",
    text: "Des réalisations notables incluant des hôtels de renom (Terroubi, Ndiambour, Yaas Hotel) et des établissements de restauration prestigieux."
  },
  {
    title: "Multitude de Secteurs",
    text: "Des collaborations étendues avec Sonatel, DHL, Auchan, et l'ASECNA, illustrant notre capacité à répondre aux besoins de secteurs variés."
  },
  {
    title: "Secteur Financier & BTP",
    text: "Partenaire d'institutions comme la BOA et Cofina, et d'acteurs majeurs du BTP tels que Makinen, Teyliom Sénégal et Vinci."
  },
  {
    title: "Fierté de notre Expérience",
    text: "Un vaste portefeuille de clients qui témoigne de notre engagement envers la satisfaction et la qualité supérieure."
  }
];

const clientCategories = [
  { title: "Hotels & Restaurants", icon: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" },
  { title: "Banques & Assurances", icon: "M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" },
  { title: "Maitres d'œuvre & BTP", icon: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" },
  { title: "Installateurs", icon: "M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" },
  { title: "Dealers", icon: "M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" },
  { title: "Stations & Supermarchés", icon: "M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" },
  { title: "Entreprises", icon: "M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" },
  { title: "Industries", icon: "M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" }
];
---

<Layout title={pageTitle} description="Nos références clients et partenaires officiels : Daikin, DAB, Vitra et plus.">
    
    <PageHero 
        title="Nos Références & Partenaires" 
        subtitle="La confiance de marques mondiales et la satisfaction de clients prestigieux."
        bgImage="/clients/hero-clients.jpg"
    />

    <section class="py-24 bg-white relative overflow-hidden">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            
            <div class="flex flex-col lg:flex-row items-center gap-16 mb-20">
                <div class="w-full lg:w-1/2">
                    <span class="text-[var(--color-primary)] font-bold tracking-widest uppercase mb-4 block">Partenaires Mondiaux</span>
                    <h2 class="text-3xl md:text-5xl font-bold text-[var(--color-secondary)] mb-6 leading-tight">Distributeur Officiel des Leaders du Marché</h2>
                    <div class="h-1 w-24 bg-[var(--color-primary)] mb-8"></div>
                    <p class="text-xl text-gray-600 leading-relaxed font-light">
                        Makto Distribution est fier d’être le distributeur officiel de marques renommées. Représenter ces marques prestigieuses illustre notre engagement envers l'innovation et la qualité supérieure des équipements que nous fournissons.
                    </p>
                </div>
                <div class="w-full lg:w-1/2 relative">
                     <div class="absolute inset-0 bg-[var(--color-secondary)]/10 rounded-xl transform translate-x-4 translate-y-4 -z-10"></div>
                     <div class="rounded-xl overflow-hidden shadow-2xl border border-gray-100">
                        <img src="/clients/partners-installation.jpg" alt="Installation professionnelle Daikin et DAB" class="w-full h-[400px] object-cover hover:scale-105 transition duration-700"/>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
                {officialBrands.map((brand) => (
                    <div class="group bg-white rounded-xl p-6 border border-gray-100 hover:shadow-xl hover:-translate-y-2 transition duration-300 text-center flex flex-col items-center">
                        <div class="h-20 flex items-center justify-center mb-4 w-full">
                            <img 
                                src={brand.img} 
                                alt={`Logo ${brand.name}`} 
                                class="max-h-16 w-auto max-w-full object-contain grayscale group-hover:grayscale-0 transition duration-500 opacity-70 group-hover:opacity-100" 
                            />
                        </div>
                        <h3 class="text-lg font-bold text-[var(--color-secondary)] mb-2">{brand.name}</h3>
                        <p class="text-xs text-gray-500 leading-relaxed font-medium">{brand.desc}</p>
                    </div>
                ))}
            </div>

        </div>
    </section>


    <section class="py-24 bg-[var(--color-bg-light)] relative overflow-hidden">
        <div class="absolute inset-0 bg-[url('/homepage/pattern.png')] opacity-5 pointer-events-none"></div>
        
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="mb-16 text-center lg:text-left">
                <h2 class="text-3xl md:text-4xl font-bold text-[var(--color-secondary)] mb-4">Ce qui nous distingue</h2>
                <div class="h-1 w-20 bg-[var(--color-primary)] mx-auto lg:mx-0"></div>
            </div>

            <div class="flex flex-col lg:flex-row gap-16 items-center">
                 <div class="w-full lg:w-1/2 relative order-2 lg:order-1">
                    <div class="rounded-xl overflow-hidden shadow-2xl h-[500px] relative group">
                        <div class="absolute inset-0 bg-gradient-to-t from-[var(--color-secondary)]/60 to-transparent z-10"></div>
                        <img src="/clients/featured-project.jpg" alt="Projet de référence Makto" class="w-full h-full object-cover transform group-hover:scale-110 transition duration-1000"/>
                        <div class="absolute bottom-8 left-8 z-20 text-white">
                            <p class="text-sm uppercase tracking-wider mb-2 font-semibold text-[var(--color-primary)]">Projet en vedette</p>
                            <h3 class="text-2xl font-bold">Excellence Opérationnelle</h3>
                        </div>
                    </div>
                </div>

                <div class="w-full lg:w-1/2 grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-12 order-1 lg:order-2">
                    {distinctions.map((item, index) => (
                        <div class="flex flex-col gap-4 items-start group">
                            <div class="flex-shrink-0 relative">
                                <span class="flex items-center justify-center w-12 h-12 rounded-xl bg-white text-[var(--color-primary)] font-bold text-xl shadow-md group-hover:bg-[var(--color-primary)] group-hover:text-white transition duration-300 border border-gray-100">
                                    0{index + 1}
                                </span>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-[var(--color-secondary)] mb-3 group-hover:text-[var(--color-primary)] transition">{item.title}</h3>
                                <p class="text-gray-600 leading-relaxed text-base font-light">
                                    {item.text}
                                </p>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </section>


    <section class="py-24 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            
            <div class="relative rounded-xl overflow-hidden mb-20 h-64 md:h-80 flex items-center justify-center text-center">
                <img src="/clients/clients-banner.jpg" alt="Nos clients" class="absolute inset-0 w-full h-full object-cover brightness-50"/>
                <div class="relative z-10 px-4">
                    <h2 class="text-3xl md:text-5xl font-bold text-white mb-4">Nos Clients & Références</h2>
                    <p class="text-lg text-gray-200 max-w-2xl mx-auto">Ils nous font confiance pour leurs projets les plus exigeants dans tous les secteurs d'activité.</p>
                </div>
            </div>

            <div class="space-y-24">
                {clientCategories.map((cat) => (
                    <div class="relative">
                        <div class="flex items-center gap-4 mb-10">
                            <div class="p-4 bg-[var(--color-secondary)]/5 rounded-xl text-[var(--color-secondary)]">
                                <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={cat.icon} />
                                </svg>
                            </div>
                            <h3 class="text-2xl md:text-3xl font-bold text-[var(--color-secondary)]">{cat.title}</h3>
                            <div class="flex-grow h-px bg-gray-100 ml-8"></div>
                        </div>

                        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 md:gap-8">
                            {[1, 2, 3, 4, 5, 6].map((i) => (
                                <div class="bg-white rounded-xl h-32 flex items-center justify-center border-2 border-gray-50 hover:border-[var(--color-primary)]/30 hover:shadow-lg transition-all duration-300 group cursor-pointer p-4 relative overflow-hidden">
                                    <div class="text-center opacity-40 group-hover:opacity-100 transition duration-300">
                                        <div class="w-10 h-10 bg-gray-200 rounded-full mx-auto mb-3 group-hover:bg-[var(--color-primary)]/10 transition-colors"></div>
                                        <span class="text-[10px] text-gray-500 font-bold uppercase tracking-widest">Client {i}</span>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                ))}
            </div>

        </div>
    </section>

    <EngagementBlock />

    
</Layout>
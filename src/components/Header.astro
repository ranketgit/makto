---
const navLinks = [
  { name: "Accueil", href: "/" },
  { name: "Services", href: "/services" },
  { name: "À Propos", href: "/about" },
  { name: "Références", href: "/clients-references" },
  { name: "Actualités", href: "/actualites" },
];
---

<header class="w-full bg-[var(--color-white)] shadow-sm fixed top-0 z-50 transition-all duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-20 flex items-center justify-between">
    
    <a href="/" class="flex-shrink-0 flex items-center">
       <img 
        src="/logo.png" 
        alt="Makto Distribution" 
        class="h-12 w-auto object-contain"
       />
    </a>

    <nav class="hidden md:flex space-x-8">
      {navLinks.map((link) => (
        <a 
          href={link.href} 
          class="text-[var(--color-text-main)] hover:text-[var(--color-primary)] font-medium transition-colors duration-200 text-sm lg:text-base"
        >
          {link.name}
        </a>
      ))}
    </nav>

    <div class="hidden md:block">
      <a 
        href="/contact" 
        class="bg-[var(--color-primary)] text-white px-6 py-2.5 rounded shadow-sm font-semibold hover:bg-opacity-90 transition text-xs lg:text-sm uppercase tracking-wide"
      >
        Demande de devis
      </a>
    </div>

    <div class="md:hidden">
      <button id="mobile-menu-btn" class="text-[var(--color-text-main)] focus:outline-none p-2">
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-100 absolute w-full left-0 top-20 shadow-lg">
    <nav class="flex flex-col p-4 space-y-4">
      {navLinks.map((link) => (
        <a 
          href={link.href} 
          class="text-[var(--color-text-main)] font-medium hover:text-[var(--color-primary)] block"
        >
          {link.name}
        </a>
      ))}
      <a href="/contact" class="text-[var(--color-primary)] font-bold uppercase block pt-4 border-t border-gray-100">
        Demande de devis
      </a>
    </nav>
  </div>
</header>

<script>
  // Simple script to toggle mobile menu
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  if(btn && menu) {
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>